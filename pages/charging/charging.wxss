page{background: #f0f0f0;}
/*header*/
view.header{width: 100%;height:70rpx;display: flex;justify-content: space-between; align-items: center;border-bottom:1px solid #ccc;box-sizing: border-box;}
view.header text{font-size:30rpx;}
/* content */
view.content_wrap{width:100%;/*background: pink;*/}
view.content{width:710rpx;/*background:orange;*/margin: 0 auto;display: flex;flex-wrap:wrap;}

view.device{width: 120rpx;height: 120rpx;background: #78a8ed;border-radius:15rpx; border:2rpx solid #78a8ed ;outline: none;margin-right: 20rpx;margin-bottom: 19rpx;font-size:32rpx;color:#fff;display: flex;flex-direction: column;justify-content:space-around;align-items: center;}
view.device:nth-child(5n){margin-right: 0;}
view.device:nth-child(1),view.device:nth-child(2),view.device:nth-child(3),view.device:nth-child(4),view.device:nth-child(5){margin-top: 20rpx;}
view.deviceUsing{background: #ccc;border:2rpx solid #78a8ed ;color:#666;}
view.deviceClicked{background: #f46246;border:2rpx solid #f46246 ;color:#fff;}
/* 余额积分 */
view.yourinfor{width: 700rpx;height:84rpx;background: #fff;margin: 20rpx auto 0;display: flex;justify-content: space-between;align-items: center;font-size:26rpx;color:#484848;border-radius: 10rpx;}
view.yourinfor>view:nth-child(1)>text:nth-child(1){margin-left: 30rpx;}
view.yourinfor>view:nth-child(2){width: 160rpx;height: 60rpx;background: #78a8ed;border-radius: 10rpx;font-size: 28rpx;color:#fff;text-align: center;line-height: 60rpx;margin-right: 30rpx;}
/* money选择 */
view.money{width: 700rpx;height: 330rpx;border-radius: 20rpx;background: #fff;margin: 20rpx auto 0;font-size:30rpx;color:#a9a9a9;overflow: hidden;}
view.money_header{width:100%;height: 60rpx;/*background: orange;*/display: flex;justify-content: space-between;align-items: center;margin-top: 10rpx;}
view.money_header>view{width: 20%;height: 1px;background: #a9a9a9;}
view.money_btn{width: 100%;height: 120rpx;/*background: pink;*/display: flex;justify-content: space-around;align-items: center;font-size:30rpx;color:#fff;}
/* 固定钱数样式改变 */
view.money_btn>view.moneyNormal{width: 120rpx;height: 60rpx;background:#78a8ed;border-radius: 8rpx; text-align: center;line-height: 60rpx;}
view.money_btn>view.moneySelected{width: 120rpx;height: 60rpx;background: #f46246;border-radius: 8rpx; text-align: center;line-height: 60rpx;}
/*isMoneyNormal 输入框的选定，恢复固定金钱按钮的样式 */
view.money_btn>view.isMoneyNormal{background:#78a8ed;}
view.input_shouldmonet{width: 100%;height: 60rpx;/*background:green;*/}
view.input_shouldmonet>input{width: 70%;height: 100%;border:1px solid #999;box-sizing: border-box;margin: 0 auto;font-size:40rpx;color:#f46246;text-align: center;}
view.charging_tip{display: flex;justify-content: space-between;margin-top: 20rpx;}
/*下面支付充电按钮*/
view.payCharge{width: 700rpx;height: 70rpx;background:#f46246;margin: 50rpx auto 0;border-radius:35rpx;font-size:40rpx;color:#fff;text-align: center;line-height: 70rpx;}